#!/bin/sh

bspc config border_width    2
bspc config window_gap      20
bspc config top_padding     70
bspc config bottom_padding  40
bspc config left_padding    50
bspc config right_padding   50

bspc config split_ratio          0.50
bspc config gapless_monocle      true
bspc config borderless_monocle   true
bspc config paddingless_monocle  true
bspc config click_to_focus       true

bspc config pointer_modifier mod4
bspc config pointer_action1 move
bspc config pointer_action2 resize_side
bspc config pointer_action3 resize_corner


#
# Appearance
#

declare -A COLOR
END=15
for ((i=0;i<=END;i++)); do
    COLOR[$i]=$(xrdb -query | awk "/^\*\.color$i:/ {print \$2}")
done

bspc config normal_border_color  "${COLOR[0]}"
bspc config focused_border_color "#263f4a"
bspc config active_border_color  "${COLOR[13]}"


#
# Displays
#

NMON=$(bspc query -M | wc -l)
bspc monitor ${monitors} -d 1/{desktop,code,web,chat,art,media,music}
i=2
for monitor in $(bspc query -M | tail -n +2); do
    bspc monitor $monitor -n "$i" -d $i/{desktop,web,code,chat}
    let i++
done
unset i


#
# Rules
#

bspc rule -a scratchpad state=floating sticky=on center=on
bspc rule -a Emacs split_ratio=0.25 state=tiled
bspc rule -a Gimp desktop=^6
bspc rule -a mplayer2 state=floating
bspc rule -a Vlc state=floating
bspc rule -a feh state=fullscreen
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off
bspc rule -a love state=floating center=on sticky=on
bspc rule -a SimpleScreenRecorder state=floating center=on sticky=on
