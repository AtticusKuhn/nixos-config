#!/bin/bash

#############
#  Aliases  #
#############

alias ll='ls -l'
alias la='ls -la'

# Directories ##################
alias dev='cd /usr/local/dev'
alias w='cd ~/Work/'
alias wd='cd ~/Work/Dev/'
alias wp='cd ~/Work/Projects/'

# Vim ##########################
alias v='mvim'

# Git ##########################
# I know the git oh-my-zsh plugin has most of these, but 
# I prefer to specify my own
alias g='git'
alias ga='g a'
alias gap='g a -p'
alias gc='g c'
alias gs='g s'
alias gd='g d'
alias gr='g r'
alias gbr='g br'

# Laravel ######################
# (already provided in zsh plugin)
#alias artisan='php artisan'
#alias bob='php artisan bob::build'

# Open a file in Mac OS's quick-look
function quick-look() {
    (( $# > 0 )) && qlmanage -p $* &>/dev/null &
}
