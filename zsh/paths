if command_exists brew; then
    BREWDIR=`brew --prefix`

    PATH=$BREWDIR/sbin:$PATH
    PATH=$BREWDIR/bin:$PATH

    COREUTIL=`brew --prefix coreutils`
    if [ -d "$COREUTIL" ]; then
        PATH=$COREUTIL/libexec/bin/gnubin:$PATH
    fi
fi

PATH=$HOME/.rvm/bin:$PATH

if [ -d ~/.dotfiles ]; then
    PATH=~/.dotfiles/bin:$PATH
fi

# vim:set ft=zsh:
