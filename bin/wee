#!/usr/bin/env bash

# Pipes input to the weechat fifo (strips commented lines
# and prepends * to commands).

fifos=$(echo "$HOME/.weechat/weechat_fifo_*")
if [ -z "$fifos" ]
then
    >&2 echo "No FIFOs. Is weechat running?"
    exit 1
fi

if [ -t 0 ]; then
    cat $@
else
    while read -r line
    do
        echo $line
    done
fi | sed '/^ *#.+/ d' | sed 's/^/*/g' > $HOME/.weechat/weechat_fifo_*
