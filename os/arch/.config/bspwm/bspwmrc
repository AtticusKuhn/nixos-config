#!/bin/sh

bspc config border_width    5
bspc config window_gap      11
bspc config top_padding     22
# bspc config bottom_padding  0
# bspc config left_padding    0
# bspc config right_padding   0

bspc config split_ratio          0.50
bspc config borderless_monocle   true
bspc config gapless_monocle      true
bspc config paddingless_monocle  true
bspc config click_to_focus       true


#
# Appearance
#

bspc config normal_border_color  "#373b41"
bspc config active_border_color  "#1C1E20"
bspc config focused_border_color "#22252c"


#
# Displays
#

i=1
for monitor in $(bspc query -M); do
    bspc monitor $monitor -n "$i" -d $i/{desktop,web,code,chat,art,music}
    let i++
done
NMON=$i
unset i


#
# Rules
#

bspc rule -a scratchpad state=floating sticky=on center=on
bspc rule -a Emacs desktop=^3 split_ratio=0.25 state=tiled
bspc rule -a Gimp desktop=^6
bspc rule -a mplayer2 state=floating
bspc rule -a Vlc state=floating
bspc rule -a feh state=floating center=on
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off
