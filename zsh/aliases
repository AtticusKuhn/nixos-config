#!/bin/bash

#############
#  Aliases  #
#############

alias ll='ls -l'
alias la='ls -la'
alias l.='ls -Ad .*'
alias du='du -h -d 1'

# Directories ##################
alias dev='cd /usr/local/dev'
alias w='cd ~/Work/'
alias wd='cd ~/Work/Dev/'
alias wp='cd ~/Work/Projects/'

# Vim ##########################
alias v='mvim'

# Git ##########################
# I know the git oh-my-zsh plugin has most of these, but 
# I prefer to specify my own. Check gitconfig to see what
# the shorthand commands do.
alias g='git'
alias ga='git add'
alias gap='git add -p'
alias gc='git commit'
alias gs='git s'
alias gl='git ll'
alias gf='git f'
alias gg='git grep -Ii'

alias gd='git difftool'
alias gdl="git ll -1"

alias gr='git reset'
alias gbr='git br'

# Laravel ######################
# (already provided in zsh plugin)
#alias artisan='php artisan'
#alias bob='php artisan bob::build'

