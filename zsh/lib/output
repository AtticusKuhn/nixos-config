
# Normal Colors
black='\e[0;30m'        # Black
red='\e[0;31m'          # Red
green='\e[0;32m'        # Green
yellow='\e[0;33m'       # Yellow
blue='\e[0;34m'         # Blue
purple='\e[0;35m'       # Purple
cyan='\e[0;36m'         # Cyan
white='\e[0;37m'        # White

# Background
BLACK='\e[40m'          # Black
RED='\e[41m'            # Red
GREEN='\e[42m'          # Green
YELLOw='\e[43m'         # Yellow
BLUE='\e[44m'           # Blue
PURPLE='\e[45m'         # Purple
CYAN='\e[46m'           # Cyan
WHITE='\e[47m'          # White

NC="\e[m"               # Color Reset

function echo-g {
    echo -e "$green$1$NC"
}

function echo-r {
    echo -e "$red$1$NC"
}

function indent {
    sed "s/^/  /"
}
