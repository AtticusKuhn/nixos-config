#############
#  Aliases  #
#############

alias ls='ls -G'
alias ll='ls -l'
alias la='ls -la'
alias l.='ls -Ad .*'
alias du='du -h -d 1'
alias q='exit'
alias sha1='openssl sha1'
alias mkdir='mkdir -pv'
# Resume download if possible
alias wget='wget -c'

# Safety nets
alias mv='mv -i'
alias cp='cp -i'
alias ln='ln -i'
# do not delete / or prompt if deleting more than 3 files at a time #
alias rm='rm -I --preserve-root'

alias chown='chown --preserve-root'
alias chmod='chmod --preserve-root'
alias chgrp='chgrp --preserve-root'

# vim
if command_exists mvim; then
    alias v='mvim'
else
    alias v='vim'
fi
alias rb='ruby'
alias py='python'
alias js='node'

# Tmux #########################
alias t='tmux'
alias tn='tmux new -s'
alias ta='tmux attach -t'
alias tl='tmux list-sessions'
alias td='tmux detach'

# Git ##########################
# I know the git oh-my-zsh plugin has most of these, but 
# I prefer to specify my own. Check gitconfig to see what
# the shorthand commands do.
alias g='git'
alias ga='git add'
alias gap='git add -p'
alias gc='git commit'
alias gs='git s'
alias gl='git ll'
alias gf='git f'
alias gg='git grep -Ii'
alias gt='git tag'
alias gd='git difftool'
alias gdl="git ll -1"
alias gr='git reset'
alias gbr='git br'

# Moving around ################
alias dot='cd ~/.dotfiles'
if command_exists "brew"; then
    alias brewp='cd `brew --prefix`'
fi

# vim:set ft=zsh:
