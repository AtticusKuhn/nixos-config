#############
#  Aliases  #
#############

if is_mac; then
    alias ls='ls -G'
else
    alias ls='ls -G --color'
fi
alias l='ls -1'
alias ll='ls -l'
alias la='ls -la'
alias l.='ls -Ad .*'
alias du='du -h -d 1'
alias q='exit'
alias sha1='openssl sha1'
alias mkdir='mkdir -pv'
# Resume download if possible
alias wget='wget -c'

alias rb='ruby'
alias py='python'
alias js='node'
if is_mac; then
    alias love="/Applications/love.app/Contents/MacOS/love"
fi

# tmux
alias t='tmux'
alias tn='tmux new -s'
alias ta='tmux attach -t'
alias tl='tmux list-sessions'
alias td='tmux detach'

# git
# I know the git oh-my-zsh plugin has most of these, but 
# I prefer to specify my own. Check gitconfig to see what
# the shorthand commands do.
alias g='git'
alias ga='git add'
alias gap='git add -p'
alias gc='git commit'
alias gs='git s'
alias gl='git le'
alias gf='git f'
alias gg='git grep -Ii'
alias gt='git tag'
alias gd='git difftool'
alias gdl="git ll -1"
alias gr='git reset'
alias ghr='git reset --hard'
alias gbr='git br'

# Laravel
alias artisan='php artisan'
alias bob='php artisan bob::build'

# debug
alias header='curl -I'

# directory shortcuts
alias dot='cd ~/.dotfiles'

if is_linux; then
    # Safety nets
    alias mv='mv -i'
    alias cp='cp -i'
    alias ln='ln -i'
    # do not delete / or prompt if deleting more than 3 files at a time #
    alias rm='rm -I --preserve-root'

    alias chown='chown --preserve-root'
    alias chmod='chmod --preserve-root'
    alias chgrp='chgrp --preserve-root'

    # iptables
    alias ipt='sudo iptables'
elif is_mac; then
    alias brewp='cd `brew --prefix`'
fi

# vim
if [[ ! -n $SSH_CLIENT ]]; then
    if command_exists mvim; then
        alias v='mvim'
    else
        alias v='gvim'
    fi
else
    alias v='vim'
fi

# vagrant
alias va='vagrant'

# vim:set ft=zsh:
