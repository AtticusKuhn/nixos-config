ICON[art]="\ue1c7"
ICON[web]="\ue26d"
ICON[chat]="\ue19f"
ICON[file]="\ue1e1"
ICON[music]="\ue1a6"
ICON[misc]="\ue140"
# clock icons
ICON[date]="\ue267"
ICON[time]="\ue016"
# wireless icons
ICON[wifioff]="\ue21a"
ICON[wifi0]="\ue25d"
ICON[wifi1]="\ue25e"
ICON[wifi2]="\ue25f"
ICON[wifi3]="\ue260"
ICON[wifi4]="\ue261"
# media player icons
ICON[play]="\ue058"
ICON[pause]="\ue09b"
ICON[stop]="\ue099"
ICON[muted]="\ue202"
ICON[speaker]="\ue203"
# misc
ICON[mail]="\ue070"
