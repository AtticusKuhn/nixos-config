#!/bin/zsh

if ! command_exists "tmux"; then
    echo-g "==> Installing tmux"
    pkg-install tmux
    if is_mac; then
        brew install reattach-to-user-namespace libevent
    fi
else
    echo-r "==> Tmux is already installed!"
fi

echo-g "==> Setting up symlinks"
do_link ~/.dotfiles/tmux.conf ~/.tmux.conf

echo-g "==> DONE!"
