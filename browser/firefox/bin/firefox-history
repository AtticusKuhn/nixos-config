#!/usr/bin/env python2

import sys
from pyfzf import FzfPrompt
from lib.FirefoxProfile import FirefoxProfile


with FirefoxProfile.default() as ff:
    choice = FzfPrompt().prompt(ff.history())
    if choice:
        ff.browse("http" + choice[0].split(", http")[1])
    else:
        print("Aborted")
        sys.exit(1)
